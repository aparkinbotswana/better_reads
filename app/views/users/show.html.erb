
<div class="container">

  <div class="col-md-6">
    <p>Userame:
      <%= @user.username %>
    </p>
    <br>
    <%= cl_image_tag @user.image, :class => "profilephoto" %>



    <br>
    <a href="/books">Show Book</a>
    <br>
    <a href="/books/show">Show review</a>
    <br>



      <a href="/reviews/new">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Write a review!</a>

<br>

      <a href="/books/new">
        <span class="glyphicon glyphicon-book" aria-hidden="true"></span>Add a book</a>


    <br>

      <span class="glyphicon glyphicon-trash" aria-hidden="true">
        <%= link_to 'Delete Account', user_path(@user), :class => "deleteaccount", data: {:confirm => 'Are you sure you would like to deactivate your account?'}, :method => :delete %></span>


  </div>

  <div class="col-md-6">

    <ul>
    <% @user.books.each do |book| %>
      <li> <%= link_to book.book_title, book_path(book) %> </li>
    <% end %>
    </ul>

    <ul>
    <% @user.reviews.each do |review| %>
      <li> <%= link_to review.book.book_title, book_path(review.book) %> </li>
    <% end %>
    </ul>

  </div>

</div>
