
<div class="container">

  <div class="col-md-6" id="profile_details">
    <p>Logged in as
      <%= @user.username %>
    </p>
    <br>
    <%= cl_image_tag @user.image, :class => "profilephoto" %>
    <br>

    <br>
    <a href="/books"><span class="glyphicon glyphicon-book" aria-hidden="true"></span>See Books</a>
    <br>

    <a href="/books/new">
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>Add a book</a>

    <br>

    <span class="glyphicon glyphicon-trash" aria-hidden="true">
      <%= link_to 'Delete Account', user_path(@user), :class => "deleteaccount", data: {:confirm => 'Are you sure you would like to deactivate your account?'}, :method => :delete %></span>

  </div>

  <div class="col-md-6" id="book_details">
      <h2>Books Added</h2>
      <% @user.books.each do |book| %>
        <%= link_to book.book_title, book_path(book) %>
        <br>
      <% end %>
      <hr>
      <br>

      <h2>Reviews</h2>
      <% @user.reviews.each do |review| %>
        <%= link_to review.book.book_title, book_path(review.book) %>
        <br>
      <% end %>

  </div>

</div>
